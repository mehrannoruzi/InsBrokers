@model PagingListDetails<BankAccount>
@{
    Layout = null;
}
@if (Model.TotalCount > 0)
{
    @foreach (var item in Model.Items)
    {
        <div class="list-item">
            <div class="dropdown actions">
                <span class="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="zmdi zmdi-more rotate-90"></i>
                </span>
                <div class="dropdown-menu">
                    <a class="dropdown-item update text-right" data-url="@Url.Action("Update","MemberBankAccount",new { id = item.BankAccountId })">
                        <i class="zmdi zmdi-edit default-i"></i>
                        @Strings.Edit
                    </a>
                    <a class="dropdown-item delete text-right" data-url="@Url.Action("Delete","MemberBankAccount",new { id = item.BankAccountId })">
                        <i class="zmdi zmdi-delete default-i"></i>
                        @Strings.Delete
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6">
                    <div class="field m-b">
                        @Html.DisplayNameFor(x => x.Items[0].BankName): <span>@item.BankName.GetDescription()</span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="field m-b">
                        @Html.DisplayNameFor(x => x.Items[0].AccountNumber): <span class="copy-value" data-copy-value="@item.AccountNumber">@item.AccountNumber</span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="field m-b">
                        @Html.DisplayNameFor(x => x.Items[0].Shaba): <span class="copy-value"  data-copy-value="@item.Shaba">@item.Shaba</span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="field m-b">
                        @Html.DisplayNameFor(x => x.Items[0].InsertDateSh): <span>@item.InsertDateSh</span>
                    </div>
                </div>
            </div>
        </div>
    }
