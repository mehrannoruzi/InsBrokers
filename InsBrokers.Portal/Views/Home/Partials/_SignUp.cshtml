@model PortalSignUpModel
@{
    Layout = null;
}
@using Elk.Core

    <form id="frm-register">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="Name" class="form-control" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="Family" class="form-control" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="FatherName" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="NationalCode" class="form-control ltr-elm" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="Email" class="form-control ltr-elm" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="Password" class="form-control ltr-elm" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4">
                <custom-select-for for="BaseInsurance" class="form-control" items="EnumExtension.GetEnumElements<BaseInsuranceType>().Select(x=>new SelectListItem {
                Text = x.Description,
                Value = x.Description
            }).ToList()" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="Province" class="form-control ltr-elm" />
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <custom-input-for for="City" class="form-control ltr-elm" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <custom-textarea-for for="AddressDetails" class="form-control ltr-elm" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-end">
                <custom-button class="btn btn-primary" type="button" text="@Strings.Submit" icon="zmdi zmdi-floppy"></custom-button>
            </div>
        </div>
    </form>

