<environment include="Production ">
    <link href="@Url.Content("~/Styles/Libs/portal-libs.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/App/portal-app.min.css")" rel="stylesheet"  asp-append-version="true" />
